<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/programImage"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@tools:sample/avatars"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/programTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@tools:sample/full_names" />

    <TextView
        android:id="@+id/programSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/programTitle"
        app:layout_constraintStart_toStartOf="@+id/programTitle"
        app:layout_constraintTop_toBottomOf="@+id/programTitle"
        tools:text="@tools:sample/date/hhmm" />

    <TextView
        android:id="@+id/programSchedule"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/programSubtitle"
        app:layout_constraintStart_toStartOf="@+id/programSubtitle"
        app:layout_constraintTop_toBottomOf="@+id/programSubtitle"
        tools:text="@tools:sample/cities" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        app:layout_goneMarginTop="36dp"
        app:layout_constraintBottom_toTopOf="@+id/programImage"
        app:layout_constraintEnd_toEndOf="@+id/programTitle"
        app:layout_constraintStart_toStartOf="@+id/programTitle"
        app:layout_constraintTop_toBottomOf="@+id/programSchedule">

        <TextView
            android:id="@+id/programDescription"
            style="@style/Live.Text.Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/lorem/random" />
    </ScrollView>

</android.support.constraint.ConstraintLayout>