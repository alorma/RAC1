<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/nowPlaying"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.333" />

    <FrameLayout
        android:id="@+id/nowPlaying"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:background="@color/very_dark_grey"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

    <com.luseen.spacenavigation.SpaceNavigationView
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:active_centre_button_background_color="?colorAccent"
        app:active_centre_button_icon_color="@color/white"
        app:active_item_color="@color/white"
        app:centre_button_color="@color/colorPrimary"
        app:inactive_centre_button_icon_color="@color/white"
        app:inactive_item_color="@color/grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:space_background_color="?colorAccent" />

</android.support.constraint.ConstraintLayout>

