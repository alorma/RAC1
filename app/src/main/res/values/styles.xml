<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Programs" />

    <style name="Programs.Item" />

    <style name="Programs.Item.Title">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
    </style>

    <style name="Programs.Item.SubTitle">
        <item name="android:drawableStart">@drawable/ic_person</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableTint">@color/grey</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="Programs.Item.Schedule">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
    </style>

    <style name="Programs.Item.Text">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    </style>

    <style name="Programs.Item.Time">
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:color">@color/grey</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:drawableTint">@color/grey</item>
    </style>

    <style name="Programs.Item.Time.StartTime">
        <item name="android:drawableStart">@drawable/ic_clock</item>
    </style>

    <style name="Programs.Item.Time.Duration">
        <item name="android:drawableStart">@drawable/ic_timer</item>
    </style>

    <style name="Programs.Item.Schedule.Day">
        <item name="android:gravity">center_vertical|start</item>
    </style>

    <style name="Programs.Item.Schedule.Day.Week">
        <item name="android:textColor">@color/day_schedule</item>
    </style>

    <style name="Programs.Item.Schedule.Day.Weekend">
        <item name="android:textColor">@color/weekend_schedule</item>
    </style>
</resources>
